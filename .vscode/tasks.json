		{
			"type": "cppbuild",
			"label": "Build active C file on Linux",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"../src/init_from_input_file.c",  // Project-unique
				"../src/init_tools.c",  // Project-unique
				"-Wall",
				"-Wextra",
				"-Wpedantic",
				"-std=c90",  // Project-unique
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.out"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
